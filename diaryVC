import UIKit
import LeanCloud

class DiaryVC: UIViewController, UITableViewDelegate, UITableViewDataSource {
    
    @IBOutlet weak var tableView: UITableView!
    @IBOutlet weak var moodNumLabel: UILabel!
    @IBOutlet weak var dateLabel: UILabel!
    var diaryDataArr = [LCObject]()
    
    override func viewDidLoad() {
        super.viewDidLoad()
        
        self.title = "日记"
        
        // view
        configView()
        
        // data
        configData()
    }
    
    func configView() {
        // tableView
        self.tableView.register(UINib.init(nibName: "DiaryCell", bundle: nil), forCellReuseIdentifier: "DiaryCellId")
        
        // Date
        let dateFormatter = DateFormatter()
        dateFormatter.dateFormat = "YYYY-MM-dd"
        let timeStr = dateFormatter.string(from: Date())
        self.dateLabel.text = timeStr + " 心情:"
    }
    
    func configData() {
        do {
            guard let user = LCApplication.default.currentUser else {
                return
            }
            let query = LCQuery(className: "Diary")
            try query.where("author", .equalTo(user))
            query.find { result in
                switch result {
                case .success(objects: let diaries):
                    print(diaries)
                    self.diaryDataArr = diaries
                    self.tableView.reloadData()
                    break
                case .failure(error: let error):
                    // LCError(code: 101, reason: "Class or object doesn't exists.")
                    print(error)
                }
            }
        } catch {
            print(error)
        }
    }
    
    override func viewWillAppear(_ animated: Bool) {
        setupMood()
    }
    
    func setupMood() {
        let defaults = UserDefaults.standard
        self.moodNumLabel.text = defaults.string(forKey: "MoodNum")
    }
    
    
    // TableView
    func tableView(_ tableView: UITableView, numberOfRowsInSection section: Int) -> Int {
        return self.diaryDataArr.count
    }
    
    func tableView(_ tableView: UITableView, cellForRowAt indexPath: IndexPath) -> UITableViewCell {
        let cell = tableView.dequeueReusableCell(withIdentifier: "DiaryCellId", for: indexPath) as! DiaryCell
        cell.cellWithData(data: self.diaryDataArr[indexPath.row])
        return cell
    }
    
    func tableView(_ tableView: UITableView, heightForRowAt indexPath: IndexPath) -> CGFloat {
        return 160
    }
    
    func tableView(_ tableView: UITableView, didSelectRowAt indexPath: IndexPath) {
        tableView.deselectRow(at: indexPath, animated: true)
        
        // 执行点击之后的代码
        let detailVC = UIStoryboard.init(name: "Main", bundle: nil).instantiateViewController(withIdentifier: "DiaryDetailVCID") as! DiaryDetailVC
        let diary = self.diaryDataArr[indexPath.row]
        let dateFormatter = DateFormatter()
        dateFormatter.dateFormat = "YYYY-MM-dd"
        detailVC.dateStr = dateFormatter.string(from: diary["date"]!.dateValue!)
        detailVC.contentStr = (diary["content"]?.stringValue!)!
        self.navigationController?.pushViewController(detailVC, animated: true)
    }
    
}
